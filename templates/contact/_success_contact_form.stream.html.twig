{# Mise Ã  jour du formulaire pour vider les champs #}
<turbo-stream action="update" target="form_contact">
    <template>
    <div class="container-fluid pt-5 mt-5">
        <div class="d-flex flex-column text-center mb-5">
            <h5 class="text-primary mb-3 mt-5">Contact Us</h5>
            <h1 class="m-0">Contact For Any Query</h1>
        </div>
        <div class="row">
            <div class="col-12 p-0">
                <iframe style="width: 100%; height: 500px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"  allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
            <div class="col-12">
                <div class="contact-form bg-white">
                    <div id="success"></div>

                    {{ form_start(form) }}
                   
                        <div class="control-group">
                            {{ form_row(form.name, {'attr': { 'class': 'form-control', 'placeholder': 'Your Name'  }}) }}
                        </div>

                        <div class="control-group">
                            {{ form_row(form.mail, {'attr': { 'class': 'form-control', 'placeholder': 'Your Adresse Email'  }}) }}
                        </div>

                        <div class="control-group">
                            {{ form_row(form.subject, {'attr': { 'class': 'form-control', 'placeholder': 'Your Subject'  }}) }}
                        </div>

                        <div class="control-group">
                            {{ form_row(form.message, {'attr': { 'class': 'form-control', 'placeholder': 'Your Message'  }}) }}
                        </div>
                        <div>
                            <button class="btn btn-primary" type="submit" id="sendMessageButton">Send Message</button>
                        </div>
                   
                    {{ form_end(form) }}


                </div>
            </div>
        </div>
    </div>

    </template>
</turbo-stream>

{# Ajout d'un "flash message" au dessus du formulaire, dans la frame "contact_form" #}
<turbo-stream action="append" target="form_contact">
    <template>
        <p style="font-weight: bold; color: green">Your message has been sent!</p>

        <hr>
    </template>
</turbo-stream>